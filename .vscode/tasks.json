{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-I${workspaceFolder}/Includes",
                "-I${workspaceFolder}/Includes/CUDA",
                "-I${workspaceFolder}/CUDA",
                "-I${workspaceFolder}/CUDA/Shared",
                "-I${workspaceFolder}/Math",
                "-I${workspaceFolder}/Math/Vector",
                "-L${workspaceFolder}/Includes/Libraries",
                "-L${workspaceFolder}/CUDA/Shared",
                "${workspaceFolder}/Includes/src/glad.c",
                "${workspaceFolder}/\\*.cpp",
                "${workspaceFolder}/Math/Vector/src/\\*.cpp",
                //"${workspaceFolder}/Math/Matrix/src/\\*.cpp",
                "-lglfw3dll",
                "-lassimp-vc142-mt",
                "-lglm_static",
                "-lcuda",
                "-lcudart",
                "-o",
                "${workspaceFolder}\\Build\\CoeusEngine.exe",
                "-Wno-deprecated",
                "-flto",
                "-ffunction-sections",
                "-fdata-sections",
                "-O3",
                "-Ofast",
                "-finline-functions",
                "-m64",
                "-funroll-loops",
                "-fexceptions",
                "--param=ssp-buffer-size=4",
                "-fno-rtti",
                "-fvisibility=hidden",
                "-Bsymbolic",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C++ run",
            "command": ".\\Build\\CoeusEngine.exe",
            "dependsOn": [
                "C/C++: g++ build active file"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}