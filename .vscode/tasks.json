{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "$(${workspaceFolder}/.getCPPFilePaths.ps1)",
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-I${workspaceFolder}/Includes",
                "-I${workspaceFolder}/Includes/CUDA",
                "-I${workspaceFolder}/CUDA",
                "-I${workspaceFolder}/CUDA/Shared",
                "-I${workspaceFolder}/Math",
                "-I${workspaceFolder}/Math/Vector",
                "-I${workspaceFolder}/Math/Rotation",
                "-I${workspaceFolder}/Math/Matrix",
                "-L${workspaceFolder}/Includes/Libraries",
                "-L${workspaceFolder}/CUDA/Shared",
                "${workspaceFolder}/Includes/src/glad.c",
                "-lglfw3dll",
                "-lassimp-vc142-mt",
                "-lglm_static",
                "-lcuda",
                "-lcudart",
                "-o",
                "${workspaceFolder}\\Build\\CoeusEngine.exe",
                //"-Wno-deprecated",
                //"-flto",
                //"-ffunction-sections",
                //"-fdata-sections",
                //"-O3",
                //"-Ofast",
                //"-finline-functions",
                //"-m64",
                //"-funroll-loops",
                //"-fexceptions",
                //"--param=ssp-buffer-size=4",
                //"-fno-rtti",
                //"-fvisibility=hidden",
                //"-Bsymbolic",
                //"-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C++ run",
            "command": ".\\Build\\CoeusEngine.exe",
            "dependsOn": [
                "C/C++: g++ build active file"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}