{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "folder clean",
            "command": "powershell -Command \"Remove-Item '${workspaceFolder}\\.objs\\*' -Recurse -Force\"",
            "dependsOrder": "sequence",
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": ".\\Makefile.bat",
            "dependsOn": [
                "folder clean"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C++ run",
            "command": ".\\Build\\CoeusEngine.exe",
            "dependsOn": [
                "C/C++: g++ build active file"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C++ clean",
            "command": "mv *.obj .objs/",
            "dependsOn": [
                "C++ run"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}